<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#4DDEF1"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgFilmes"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homaranha"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPIDER-MAN NO WAY HOME"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:id="@+id/idTituloFilmes"
        />

         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sinopsespiderman"
             android:id="@+id/idDescricaoFilmes"
        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/idAcessoFilmes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_baseline_favorite"
                />

"



        </RelativeLayout>


    </LinearLayout>

</LinearLayout>